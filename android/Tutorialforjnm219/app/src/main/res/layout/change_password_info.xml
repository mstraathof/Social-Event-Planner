<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout android:layout_width="368dp"
        android:layout_height="439dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <TextView
        android:id="@+id/topLabel"
        android:layout_width="383dp"
        android:layout_height="52dp"
        android:text=""
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
    android:id="@+id/enterCurrentPassword"
    android:layout_width="384dp"
    android:layout_height="52dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text=""
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="62dp"
    android:layout_below="@+id/topLabel"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/enterNewPassword"
        android:layout_width="384dp"
        android:layout_height="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="62dp"
        android:layout_below="@+id/enterCurrentPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonOk"
        android:layout_toLeftOf="@+id/buttonOk"
        android:layout_toStartOf="@+id/buttonOk"
        android:text="Cancel"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/buttonOk"
        android:layout_width="191dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="162dp"
        android:text="OK"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="371dp" />

    </RelativeLayout>


</LinearLayout>